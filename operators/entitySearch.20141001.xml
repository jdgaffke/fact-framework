<?xml version="1.0" encoding="UTF-8"?>
<operator 
    name="contactSearch"
    created="20141001"
    deprecated=""
    retired=""
    implementation="contactSearch.20141001.js"
    >

    <note> 
    Performs a text search on the designated fields, returning a nested
    rowset of contact IDs.
    </note>        
    
    <example> 
        <query>
            <contactSearch c:fullName="joe">
                <contact />
            </contactSearch>
        </query>
    </example>        
    
    <input>
        <field name="fullName" type="String" note="Searches name fields."/>
    </input>        
        
    <output rowset="contactSearch">
        <field name="contactId" type="ContactId" note=""/>
    </output>        
    
</operator>
