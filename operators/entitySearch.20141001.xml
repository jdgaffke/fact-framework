<?xml version="1.0" encoding="UTF-8"?>
<operator 
    name="entitySearch"
    created="20141001"
    deprecated=""
    retired=""
    implementation="entitySearch.20141001.js"
    >

    <note> 
    Performs a freeform text search on the designated fields, returning a nested
    rowset of entity IDs.
    </note>        
    
    <example> 
        <query v="20141001">
            <entitySearch c:all="your search terms">
                <entityName/>
            </entitySearch>
        </query>
    </example>        
    
    <consumes>
        <input name="all" type="String" note="Searches all fields."/>
    </consumes>        
        
    <produces rowset="entitySearch">
        <output name="entityId" type="EntityId" note=""/>
    </produces>        
    
</operator>
